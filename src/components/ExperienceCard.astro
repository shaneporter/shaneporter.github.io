---
interface Props {
	company: string;
	role: string;
	period: string;
	description: string;
	achievements?: string[];
}

const { company, role, period, description, achievements } = Astro.props;
---

<article class="mb-12 pb-12 border-b border-zinc-200 dark:border-zinc-800 last:border-0">
	<div class="mb-4">
		<h3 class="text-2xl mb-1 text-zinc-900 dark:text-zinc-100">{role}</h3>
		<div class="text-lg text-portfolio-red dark:text-red-400 mb-1">{company}</div>
		<div class="text-sm text-zinc-500 dark:text-zinc-400">{period}</div>
	</div>
	
	<p class="text-lg leading-relaxed text-zinc-700 dark:text-zinc-300 mb-4">
		{description}
	</p>
	
	{achievements && achievements.length > 0 && (
		<ul class="list-none space-y-2 ml-0">
			{achievements.map(achievement => (
				<li class="text-zinc-700 dark:text-zinc-300 pl-6 relative before:content-['â– '] before:absolute before:left-0 before:text-portfolio-red dark:before:text-red-400">
					{achievement}
				</li>
			))}
		</ul>
	)}
</article>
